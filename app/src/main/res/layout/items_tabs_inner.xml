<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <org.swistowski.vaulthelper.views.DisableableViewPager xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/label_selector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        tools:context="org.swistowski.vaulthelper.MainActivity">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_title_strip"
            style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top" />


    </org.swistowski.vaulthelper.views.DisableableViewPager>

    <org.swistowski.vaulthelper.views.LabelSelector
        android:id="@+id/label_selector"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>